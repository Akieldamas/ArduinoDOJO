<Window x:Class="ArduinoDOJO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArduinoDOJO"
        mc:Ignorable="d"
        Title="MainWindow" Background="LightGray" Height="450" Width="800">
    <Grid Margin="10">
        <!-- Buttons on the left -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10">
            <Button x:Name="BTN_Train" IsEnabled="True" Content="Train" Width="100" Height="30" Margin="0,0,0,10" Click="BTN_Train_Click"/>
            <Button x:Name="BTN_Predict" IsEnabled="False" Content="Predict" Width="100" Height="30" Margin="0,0,0,10" Click="BTN_Predict_Click"/>
            <Button x:Name="BTN_Load" IsEnabled="True" Content="Load" Width="100" Height="30" Margin="0,0,0,10" Click="BTN_Load_Click"/>
            <Button x:Name="BTN_Save" IsEnabled="False" Content="Save" Width="100" Height="30" Click="BTN_Save_Click"/>
        </StackPanel>

        <!-- Sliders and labels at the top -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="120,10,10,0">
            <!-- Input Layer Slider -->
            <StackPanel Orientation="Vertical" Width="150" HorizontalAlignment="Center">
                <TextBlock Text="Input Layer (Params)" HorizontalAlignment="Center"/>
                <Slider Name="InputSlider" Width="150" Minimum="0" Maximum="7" Value="1" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,5,0,0" ValueChanged="InputSlider_ValueChanged"/>
                <Grid Height="15">
                    <TextBlock Text="0" HorizontalAlignment="Left"/>
                    <TextBlock Name="TB_InputCurrent" Text="1" HorizontalAlignment="Center"/>
                    <TextBlock Text="7" HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>

            <!-- Hidden Layer Slider -->
            <StackPanel Orientation="Vertical" Width="150" HorizontalAlignment="Center" Margin="30,0,0,0">
                <TextBlock Text="Hidden Layer (Nodes)" HorizontalAlignment="Center"/>
                <Slider Name="HiddenSlider" Width="150" Minimum="0" Maximum="20" Value="7" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,5,0,0" ValueChanged="HiddenSlider_ValueChanged"/>
                <Grid Height="15">
                    <TextBlock Text="0" HorizontalAlignment="Left"/>
                    <TextBlock Name="TB_HiddenCurrent" Text="7" HorizontalAlignment="Center"/>
                    <TextBlock Text="20" HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>

            <!-- Nodes Slider -->
            <StackPanel Orientation="Vertical" Width="150" HorizontalAlignment="Center" Margin="30,0,0,0">
                <TextBlock Text="Learning Rate" HorizontalAlignment="Center"/>
                <Slider Name="LearningRateSlider" Width="150" Minimum="0.001" Maximum="1" Value="0.001" TickFrequency="0.001" IsSnapToTickEnabled="True" Margin="0,5,0,0" ValueChanged="LearningRateSlider_ValueChanged"/>
                <Grid Height="15">
                    <TextBlock Text="0" HorizontalAlignment="Left"/>
                    <TextBlock Name="TB_LearningRateCurrent" Text="0.001" HorizontalAlignment="Center"/>
                    <TextBlock Text="0.01" HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>
        </StackPanel>

        <!-- Circular shape in the center -->

        <!-- Data display below -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Training Data -->
            <StackPanel HorizontalAlignment="Left" Grid.Column="0">
                <TextBlock Text="Training" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,0,0,5"/>
                <DataGrid x:Name="TrainingGrid" Height="150">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding id}" IsReadOnly="True" CanUserResize="False" Width="auto"/>
                        <DataGridTextColumn Header="x" Binding="{Binding x}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="y" Binding="{Binding y}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="esc" Binding="{Binding esc}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="up" Binding="{Binding up}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="down" Binding="{Binding down}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="right" Binding="{Binding right}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="left" Binding="{Binding left}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="tag" Binding="{Binding tag}" IsReadOnly="True" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <!-- Prediction Data -->
            <StackPanel HorizontalAlignment="Right" Grid.Column="1">
                <TextBlock Text="Predict" FontWeight="Bold" HorizontalAlignment="Left" Margin="5,0,0,5"/>
                <DataGrid x:Name="PredictGrid" Height="150">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding id}" IsReadOnly="True" CanUserResize="False" Width="auto"/>
                        <DataGridTextColumn Header="x" Binding="{Binding x}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="y" Binding="{Binding y}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="esc" Binding="{Binding esc}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="up" Binding="{Binding up}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="down" Binding="{Binding down}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="right" Binding="{Binding right}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="left" Binding="{Binding left}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="tag" Binding="{Binding tag}" IsReadOnly="True" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>

        <!-- Epoch display at the bottom -->
        <TextBlock Text="Epochs: 400000" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,0,0,0"/>
    </Grid>
</Window>
